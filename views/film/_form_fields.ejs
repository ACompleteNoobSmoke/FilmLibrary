<div class="form-row">
    <div class="form-item">
        <label>User</label>
        <select name="user">
            <% users.forEach(user => { %>
                <% if(user.id === film.user){ %>
                    <option selected label="<%=user.name%>" value="<%=user.id %>" ></option>
               <% } else { %>
                    <option label="<%=user.name%>" value="<%=user.id%>"></option>
              <% } %>
           <% }) %> 
        </select>
    </div>
    <div class="form-item">
        <label>Director</label>
        <input type="text" name="director" value="<%=film.director %>">
    </div>
</div>

<div class="form-row">
    <div class="form-item">
        <label>Title</label>
        <input type="text" name="title" value="<%=film.title%>">
    </div>
    <div class="form-item">
        <label>Genre</label>
        <select name="genre">
            <option  value="action">Action</option>
            <option  value="animated">Animated</option>
            <option  value="comedy">Comedy</option>
            <option  value="documentary">Documentary</option>
            <option  value="drama">Drama</option>
            <option  value="horror">Horror</option>
            <option  value="suspense">Suspense</option>
            <option  value="thriller">Thriller</option>
        </select>
    </div>
</div>

<div class="form-row">
    <div class="form-item">
        <label>Release Date</label>
        <input type="date" name="releaseDate" value="<%=film.releaseDate == null ? '' : film.releaseDate.toISOString().split('T')[0]%>" >
    </div>
    <div class="form-item">
        <label>Rating</label>
        <input type="number" name="rating" value="<%=film.rating %>" min="1" max="10">
    </div>
    <div class="form-item form-item-no-grow">
        <label>Cover</label>
        <input type="file" name="cover" class="filepond">
    </div>
</div>
<div class="film-form-row">
    <div class="film-form-item">
        <label>User</label>
        <select name="user">
            <% users.forEach(user => { %>
                <% if(user.id === film.user){ %>
                    <option selected label="<%=user.name%>" value="<%=user.id %>" ></option>
               <% } else { %>
                    <option label="<%=user.name%>" value="<%=user.id%>"></option>
              <% } %>
           <% }) %> 
        </select>
    </div>
    <div class="film-form-item">
        <label>Director</label>
        <input type="text" name="director" required value="<%=film.director %>">
    </div>
</div>

<div class="film-form-row">
    <div class="film-form-item">
        <label>Title</label>
        <input type="text" name="title" required value="<%=film.title%>">
    </div>
    <div class="film-form-item">
        <label>Genre</label>
        <select name="genre">
            <option  value="Action">Action</option>
            <option  value="Animated">Animated</option>
            <option  value="Comedy">Comedy</option>
            <option  value="Documentary">Documentary</option>
            <option  value="Drama">Drama</option>
            <option  value="Horror">Horror</option>
            <option  value="Suspense">Suspense</option>
            <option  value="Thriller">Thriller</option>
        </select>
    </div>
</div>

<div class="film-form-row">
    <div class="film-form-item">
        <label>Release Date</label>
        <input type="date" name="releaseDate" required value="<%=film.releaseDate == null ? '' : film.releaseDate.toISOString().split('T')[0]%>" >
    </div>
    <div class="film-form-item">
        <label>Rating</label>
        <input type="number" name="rating" value="<%=film.rating %>" min="1" max="10" required>
    </div>
    <div class="film-form-item form-item-no-grow">
        <label>Cover</label>
        <input type="file" name="cover" class="filepond" required>
    </div>
</div>